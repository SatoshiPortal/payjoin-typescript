{
  "name": "ts-payjoin",
  "version": "1.0.0",
  "description": "TypeScript bindings for the Rust PayJoin library",
  "main": "src/index.ts",
  "napi": {
    "name": "index",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-apple-darwin",
        "aarch64-apple-darwin"
      ]
    },
    "package": {
      "name": "@ts-payjoin/core"
    },
    "path": "./native"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release --cargo-cwd native",
    "build:debug": "napi build --platform --cargo-cwd native",
    "test": "RUST_BACKTRACE=1 RUST_LOG=debug jest --verbose"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4",
    "@types/jest": "^26.0.24",
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.0.0",
    "eslint": "^7.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/ts-payjoin.git"
  },
  "keywords": [
    "typescript",
    "rust",
    "payjoin",
    "bindings"
  ]
}
